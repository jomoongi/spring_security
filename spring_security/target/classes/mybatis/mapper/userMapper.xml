<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
	<select id="getUser" parameterType="String" resultType="Map">
		SELECT
		*
		FROM
		USR_USER
		WHERE
		TS_TITLE = #{value}
	</select>

	<select id="countFailure" parameterType="String"
		resultType="Map">
		UPDATE
		USR_USER
		SET
		TS_BASE_HOLIDAY = TS_BASE_HOLIDAY + 1
		WHERE
		TS_TITLE = #{value}
	</select>

	<select id="checkFailureCount" parameterType="String" resultType="integer">
		SELECT
		TS_BASE_HOLIDAY
		FROM
		USR_USER
		WHERE
		TS_TITLE = #{value}
	</select>
</mapper>
